doctype
html
  head
    title #{title}
    link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet" href="/css/materialize.min.css")
    link(rel="stylesheet" href="/css/style.css")
    link(rel="stylesheet" href="/css/prism.css")
    link(rel="stylesheet" href="/book/style.css")
    script(src="https://code.jquery.com/jquery-3.1.1.min.js" type="text/javascript" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous")
    script(src="/js/prism.js" type="text/javascript")
    script(src="/js/materialize.min.js" type="text/javascript")
    script(src="/js/main.js" type="text/javascript")
  body.main-color.lighten-4
    #fb-root
    script
      |(function(d, s, id) {
      | var js, fjs = d.getElementsByTagName(s)[0];
      | if (d.getElementById(id)) return;
      | js = d.createElement(s); js.id = id;
      | js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.8";
      | fjs.parentNode.insertBefore(js, fjs);
      |}(document, 'script', 'facebook-jssdk'));
      | $(document).ready(function(){
      |   $(".button-collapse").sideNav();
      |});
    nav(role="navigation")
      .nav-wrapper.main-color.lighten-1
        .container
          a.button-collapse(href="#" data-activates="slide-out2")
            i.material-icons menu

          #side-out2.side-nav.fixed
          ul.side-nav.fixed
            li
              a(href="/book/js/") Why this book
            li
              a(href="/book/js/introduction") Introduction
              ul
                li
                  a(href="/book/js/introduction/hello-world") Hello World
                li
                  a(href="/book/js/introduction/variable") Variable
          a#logo-container.brand-logo(href="/") Javascript for Developers
          ul.right.hide-on-med-and-down
            li
              a(href="/blog") Blog
            li.active
              a(href="/book") Book
    .section.back.main-color
    .section.blog
      .container
        nav.z-depth-0.main-color
          .nav-wrapper
            .col.s12
              a.breadcrumb(href="/") home
              a.breadcrumb(href="/book") book
              a.breadcrumb(href="/book/js") js
              a.breadcrumb(href="#!") #{title}
        .card.z-depth-2
          //removed .flow-text
          .card-content
            span.posted.grey-text #{date}
            //.fb-like(
                data-share="true"
                data-width="450"
                data-show-faces="true")
            h2 #{title}
            != yield
          .fb-comments.grey.lighten-4.flow-text(data-href="http://vamshi.me/blog/#{url}" data-numposts="5" )
          
